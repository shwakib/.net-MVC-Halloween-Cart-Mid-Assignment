@model Ch24ShoppingCartMVC.Models.CartViewModel
@{
    ViewBag.Title = "Cart";
}
@section css {
    <link href="~/Content/Cart.css" rel="stylesheet" />
}
<h2>Your Shopping Cart</h2>
@if (Model.Cart==null)
{
    <p>Nothing in your cart yet.</p>
}
else
{
    <select multiple="multiple">
        @foreach (var item in Model.Cart)
        {
            <option>@item.Display()</option>
        }
    </select>
}

@{decimal totalPrice = 0.0m; }
<h3>Information:</h3>
@if(Model.Cart==null)
{
    <p>You don't have any items to checkout.Please add items to your cart. </p>
}
else
{
    foreach(var item in @Model.Cart)
    {
        <table style="width:100%">
            <tr align=center>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total Price</th>
            </tr>
            <tr align="center">
                <td>@item.Name</td>
                <td>@item.UnitPrice.ToString("0.00")</td>
                <td>@item.Quantity</td>
                <td>@((@item.Quantity * item.UnitPrice).ToString(""))</td>
            </tr>
        </table>
        totalPrice += @item.Quantity * @item.UnitPrice;
    }
}

<br />
<h2>Total Amount:</h2>
$@totalPrice.ToString("0.00")  
<br />
<button>
    CheckOut
</button>

@Html.ActionLink("Clear Cart", "Index/", "Home")